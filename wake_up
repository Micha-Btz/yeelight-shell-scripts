#!/bin/bash
command="/home/dietpi/source/yeelight-shell-scripts/yeelight-scene.sh 0 Nightlight "
#set -x
brightness="1"
COUNTER=10
	until [  $COUNTER -lt 1 ]; do
	$command $brightness
	sleep 110
	let COUNTER-=1
	let brightness+=1
done
sleep 400
/home/dietpi/source/yeelight-shell-scripts/yeelight-scene.sh 0 Off
exit 0
